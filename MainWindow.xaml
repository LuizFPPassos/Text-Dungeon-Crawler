        <Label x:Name="LabelTorchRadius" Content="%  Torch Radius" HorizontalAlignment="Left" Margin="1747,298,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Footlight MT Light" FontSize="18" Foreground="#FFE8E8E8" Height="33" Width="132"/>
        <TextBox x:Name="TextBoxTorchDuration" HorizontalAlignment="Left" Margin="1711,341,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="38" Background="#FF0B0C0E" Foreground="#FFE6E6E6" BorderBrush="#FF444444" Height="20" FontFamily="Footlight MT Light" FontSize="18" TextAlignment="Justify" Grid.Row="2" GotFocus="TextBoxTorchDuration_GotFocus" LostFocus="TextBoxTorchDuration_LostFocus" PreviewTextInput="TextBoxTorchDuration_PreviewTextInput"/>
        <Label x:Name="LabelTorchDuration" Content="%  Torch Duration" HorizontalAlignment="Left" Margin="1747,336,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Footlight MT Light" FontSize="18" Foreground="#FFE8E8E8" Height="33" Width="147"/>
        <Button x:Name="ButtonUseTorch" Content="Use Torch" HorizontalAlignment="Left" Margin="1711,418,0,0" VerticalAlignment="Top" Height="28" Width="102" FontFamily="Goudy Old Style" FontSize="22" BorderBrush="#FF4A4A4A" FontWeight="Bold" Grid.Row="2" Click="ButtonUseTorch_Click">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF383838"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0D0D0D" Offset="0.161"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3F3B3B"/>
                    <GradientStop Color="#FFE5FBFF"/>
                    <GradientStop Color="#FF1D252D" Offset="1"/>
                    <GradientStop Color="#FFC4DBE6" Offset="0.122"/>
                    <GradientStop Color="#FF3D4B58" Offset="0.894"/>
                    <GradientStop Color="#FF9BADB9" Offset="0.325"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="TextBoxTorchAmount" HorizontalAlignment="Left" Margin="1711,378,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="38" Background="#FF0B0C0E" Foreground="#FFE6E6E6" BorderBrush="#FF444444" Height="20" FontFamily="Footlight MT Light" FontSize="18" TextAlignment="Justify" Grid.Row="2" PreviewTextInput="TextBoxTorchAmount_PreviewTextInput" GotFocus="TextBoxTorchAmount_GotFocus" LostFocus="TextBoxTorchAmount_LostFocus"/>
        <Label x:Name="LabelTorchAmount" Content=" Torch Amount" HorizontalAlignment="Left" Margin="1748,374,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Footlight MT Light" FontSize="18" Foreground="#FFE8E8E8" Height="33" Width="147"/>
        <Label x:Name="LabelTorchRadius_Copy" Content="Game Settings" HorizontalAlignment="Left" Margin="1733,230,0,0" Grid.Row="2" VerticalAlignment="Top" FontFamily="Footlight MT Light" FontSize="22" Foreground="#FFE8E8E8" Height="33" Width="139"/>

    </Grid>
