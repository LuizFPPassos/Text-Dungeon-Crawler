            <RowDefinition Height="28*"/>
            <RowDefinition Height="483*"/>
            <RowDefinition Height="559*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBoxConsole" HorizontalAlignment="Left" Height="974" Margin="21,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1175" Foreground="White" Background="Black" FontFamily="Square Modern" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" FontSize="9" Grid.RowSpan="3" ScrollViewer.CanContentScroll="True"/>
        <Button x:Name="ButtonGenerateMap" Content="Generate Map" HorizontalAlignment="Left" Margin="1222,450,0,0" VerticalAlignment="Top" Click="ButtonGenerateMap_Click" Height="48" Width="229" FontFamily="Goudy Old Style" FontSize="36" BorderBrush="#FF4A4A4A" FontWeight="Bold" Grid.Row="2">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF383838"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0D0D0D" Offset="0.161"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3F3B3B"/>
                    <GradientStop Color="#FFE5FBFF"/>
                    <GradientStop Color="#FF1D252D" Offset="1"/>
                    <GradientStop Color="#FFC4DBE6" Offset="0.122"/>
                    <GradientStop Color="#FF3D4B58" Offset="0.894"/>
                    <GradientStop Color="#FF9BADB9" Offset="0.325"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="TextBoxHelp" HorizontalAlignment="Left" Margin="1222,230,0,0" TextWrapping="Wrap" Text="X: Walls&#xA;S: Starting Point&#xA;E: Exit Point&#xA;T: Teleporter&#xD;&#xA;O: Player&#xA;W A S D: Movement&#xA;Enter: Interact&#xA;Esc: Quit&#xA;Use the mouse wheel to scroll up/down the map" VerticalAlignment="Top" Width="463" Background="#FF0B0C0E" Foreground="#FFE6E6E6" BorderBrush="#FF444444" Height="198" FontFamily="Footlight MT Light" FontSize="20" TextAlignment="Justify" IsReadOnly="True" Grid.Row="2"/>
        <Button x:Name="ButtonPlay" Content="Play" HorizontalAlignment="Left" Margin="1456,450,0,0" VerticalAlignment="Top" Height="48" Width="229" FontFamily="Goudy Old Style" FontSize="36" BorderBrush="#FF4A4A4A" FontWeight="Bold" IsEnabled="False" Opacity="0.5" Click="ButtonPlay_Click" Grid.Row="2">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF383838"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF0D0D0D" Offset="0.161"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3F3B3B"/>
                    <GradientStop Color="#FFE5FBFF"/>
                    <GradientStop Color="#FF1D252D" Offset="1"/>
                    <GradientStop Color="#FFC4DBE6" Offset="0.122"/>
                    <GradientStop Color="#FF3D4B58" Offset="0.894"/>
                    <GradientStop Color="#FF9BADB9" Offset="0.325"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="TextBoxSystemConsole" HorizontalAlignment="Left" Margin="1222,21,0,0" TextWrapping="Wrap" Text="System Console" VerticalAlignment="Top" Width="674" Background="#FF0B0C0E" Foreground="#FFE6E6E6" BorderBrush="#FF444444" Height="683" FontFamily="Footlight MT Light" TextAlignment="Justify" IsReadOnly="True" FontSize="16" Grid.RowSpan="3"/>
        <CheckBox x:Name="CheckBoxFogOfWar" Content="  Fog of war" HorizontalAlignment="Left" Margin="1717,272,0,0" VerticalAlignment="Top" Foreground="#FFE8E8E8" FontFamily="Footlight MT Light" FontSize="20" Height="21" Width="123" IsChecked="True" Click="CheckBoxFogOfWar_Click" Grid.Row="2"/>
